<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testmoodle"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/moodle_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.testmoodle.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
      <activity
            android:name="com.example.testmoodle.activity.CourseDetailsActivity" android:configChanges="orientation" android:label="Moodle Course listing" >
        </activity>
         <activity
            android:name="com.example.testmoodle.activity.CourseContentSelectorActivity" android:configChanges="orientation" android:label="Course Content listing" >
        </activity>
         <activity
            android:name="com.example.testmoodle.activity.ContentSelector" android:configChanges="orientation" android:label="Course Content listing" >
        </activity>
         <activity
            android:name="com.example.testmoodle.activity.CourseDocumentView" android:configChanges="orientation" android:label="Course Document listing" >
        </activity>
          <activity
            android:name="com.example.testmoodle.activity.CourseAssignnmentView" android:configChanges="orientation" android:label="Course Assignment listing" >
        </activity>
         <activity
            android:name="com.example.testmoodle.activity.CourseForumView" android:configChanges="orientation" android:label="Course Forum listing" >
        </activity>
        <activity
            android:name="com.example.testmoodle.activity.OfflieFolderListigActivity" android:configChanges="orientation" android:label="Offline Folder listing" >
        </activity>
        <activity
            android:name="com.example.testmoodle.activity.OfflineFileListingActivity" android:configChanges="orientation" android:label="Offline File listing" >
        </activity>
    </application>

</manifest>