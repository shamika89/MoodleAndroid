<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myFilesOffline"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp" >

    <TextView
        android:id="@+id/myOfflineFileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:lines="1"
        android:paddingBottom="5dp"
        android:paddingTop="6dp"
        android:textStyle="bold"
        android:textSize="12sp" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/myOfflineFileDetails"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:text="22 MB, 26/12/2012 07:44 PM"
            android:textSize="9sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <Button
                android:id="@+id/myOfflineFileDeleteButton"
                android:layout_width="60dp"
                android:layout_height="22dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/orangebtn"
                android:paddingTop="2dp"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:textSize="9sp" />

            <Button
                android:id="@+id/myOfflineFileOpenButton"
                android:layout_width="60dp"
                android:layout_height="22dp"
                android:background="@drawable/bluebtn"
                android:paddingTop="2dp"
                android:text="@string/open"
                android:textColor="@color/white"
                android:textSize="9sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>